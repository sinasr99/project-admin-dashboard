{
  "compilerOptions": {
    "noEmitOnError": true,
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module + Interop */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Node types */
    "types": ["node"],

    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Performance / Compatibility */
    "skipLibCheck": true
  },
  "include": ["src"]
}
